<style>
  /* Temporärer, seiten-spezifischer Override: verwende die neue, zugeschnittene Datei hintergrund-band.jpg
     (ändert nur diese Seite; Layout und globale CSS werden nicht angefasst) */
  .site-background {
    background-image: url('/hintergrund.jpg') !important;
    background-position: center 35% !important;
    background-size: cover !important;
  }

  .book-detail-page {
    max-width: 1200px;
    margin: 4rem auto;
    padding: 0 2rem;
  }

  .content-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
    background: var(--panel-bg);
    padding: 3rem;
    border-radius: 8px;
  }

  .cover-column {
    flex: 1;
    min-width: 280px;
    max-width: 350px;
  }

  .cover-column img {
    width: 100%;
    height: auto;
    border-radius: 4px;
    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
  }

  .info-column {
    flex: 2;
    min-width: 300px;
  }

  .title {
    font-family: 'Lora', serif;
    font-size: 2.8rem;
    color: var(--heading-color);
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.15rem;
    color: var(--color-text-secondary);
    margin-left: 2.5s.1rem;
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .author {
    font-size: 1.5rem;
    color: var(--color-text-secondary);
    margin-top: 0;
    margin-bottom: 3rem;
  }

  .chapter-list {
    list-style: none;
    padding-left: 0;
    counter-reset: chapter-counter;
  }

  .chapter-list li {
    font-size: 1.25em;
    margin-bottom: 1.25rem;
    padding-left: 3rem;
    position: relative;
  }

  .chapter-list li::before {
    counter-increment: chapter-counter;
    content: counter(chapter-counter) ".";
    position: absolute;
    left: 0;
    top: 2px;
    font-weight: 600;
    color: var(--heading-color);
    opacity: 0.8;
    font-family: 'Lora', serif;
  }

  .chapter-list a {
    color: var(--text-color);
    text-decoration: none;
    transition: color 0.3s, background-position 0.4s ease-out;
    background: linear-gradient(to right, var(--link-hover-color), var(--link-hover-color));
    background-size: 0% 2px;
    background-repeat: no-repeat;
    background-position: left bottom;
    padding-bottom: 2px;
  }

  .chapter-list a:hover {
    color: var(--link-hover-color);
    background-size: 100% 2px;
  }

  .back-link-container {
    margin-top: 2rem;
  }

  .back-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 1.1rem;
  }

  .back-link:hover {
    color: var(--link-hover-color);
    text-decoration: underline;
  }
</style>
