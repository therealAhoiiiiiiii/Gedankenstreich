---
import Layout from '../layouts/Layout.astro';
import '../styles/background.css';
import Navigation from '../components/Navigation.astro';

// load Schlussdialog content
const schlussModules = import.meta.glob('./src/content/gesamtwerk/schlussdialog/*.{md,mdx,markdown}', { eager: true });
const schlussItems = Object.entries(schlussModules).map(([path, mod]) => {
  const file = path.split('/').pop();
  const slug = file.replace(/\.(md|mdx|markdown)$/i, '');
  const fm = mod.frontmatter ?? mod.meta?.frontmatter ?? mod.attributes ?? {};
  return { slug, component: mod.default, frontmatter: fm };
});
schlussItems.sort((a, b) => (a.frontmatter?.order ?? 999) - (b.frontmatter?.order ?? 999));
const schlussItem = schlussItems[0];
const SchlussComp = schlussItem?.component;
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Schlussdialog â€” Gedankenstreich</title>
  </head>
  <body>
    <Navigation />

    <header class="page-hero" style="background-image: url('/hintergrund.jpg'); background-size: cover; background-position: center;">
      <div class="hero-inner">
        <a href="/gesamtwerk" class="back-link">&lt;-- Gesamtwerk</a>
        <h1>Schlussdialog</h1>
      </div>
    </header>

    <Layout>
      <main class="container">
        <article class="content">
          {SchlussComp ? (
            <SchlussComp />
          ) : (
            <p>Schlussdialog wird gerade vorbereitet.</p>
          )}
        </article>
      </main>
    </Layout>
  </body>

  <style>
    .page-hero { padding: 2.5rem 1.25rem; color: white; }
    .hero-inner { max-width: 900px; margin: 0 auto; }
    .back-link { color: inherit; display: inline-block; margin-bottom: 0.6rem; text-decoration: none; }
    .content { max-width: 68ch; margin: 1.25rem auto; }
  </style>
</html>
