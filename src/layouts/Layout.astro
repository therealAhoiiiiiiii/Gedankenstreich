---
import '../styles/global-kombi.css';
---
<head><meta charset="utf-8" /></head>
<div class="layout-shell">
  <div class="site-background" aria-hidden="true"></div>
  <slot />
</div>

<style>
/* very small shell helpers if needed; heavy styles live in global css */
.layout-shell { min-height:100vh; position:relative; }
.site-background { position: fixed; inset:0; z-index:0; pointer-events:none; background-image: url('/hintergrund.jpg'); background-size:cover; background-position:center; opacity:1; transition:opacity .35s ease; }
.layout-shell > * { position:relative; z-index:10; }
</style>
